{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
{% endblock %}
{% block body %}
    <div id="bookingTitle">
        <h1>Votre Commande</h1>
    </div>
{{ form_start(form) }}
    {{ form_label(form.visitDay, 'Date de la visite') }}
    {{ form_widget(form.visitDay) }}
    {{ form_label(form.email, 'Email') }}
    {{ form_widget(form.email) }}
    {{ form_label(form.orderType, 'Type de billet') }}
    {{ form_widget(form.orderType) }}
    {{ form_label(form.ticketNumber, 'Nombre de ticket') }}
    {{ form_widget(form.ticketNumber) }}
{{ form_end(form) }}

{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/datepicker.js') }}"></script>
{% endblock %}